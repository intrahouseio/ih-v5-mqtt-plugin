{
  "grid": [
    { "id": "p1", "xs": 4, "class": "main", "table": "units" },
    { "id": "p2", "xs": 4, "class": "main", "table": "units" },
    { "id": "p3", "xs": 4, "class": "main", "table": "units" },
    { "id": "p9", "xs": 12, "class": "main", "table": "unitsTreeTable", "height": "fill" }
  ],
  "spacing": 10,

  "p1": [
    { "prop": "id", "title": "ID", "type": "text" },
    { "prop": "name", "title": "$Name", "type": "input" },
    {
      "prop": "host",
      "title": "$host",
      "type": "input",
      "default": "127.0.0.1"
    },
    {
      "prop": "port",
      "title": "$port",
      "type": "input",
      "default": "1883"
    },
    {
      "prop": "protocol",
      "title": "$protocol",
      "type": "droplist",
      "default": "mqtt",
      "data":[{"id":"mqtt", "title":"mqtt"}, {"id":"mqtts", "title":"mqtts"}]
    },
    {
      "prop": "useselfsigned",
      "title": "Use self signed sertificate",
      "type": "cb",
      "default": false,
      "hide": "data.p1.protocol.id != \"mqtts\"" 
    },
    {
      "prop": "key",
      "title": "Private KEY file path",
      "type": "input",
      "default": "/",
      "hide": "data.p1.protocol.id != \"mqtts\" || !data.p1.useselfsigned" 
    },
    {
      "prop": "cert",
      "title": "Public CERT file path",
      "type": "input",
      "default": "/",
      "hide": "data.p1.protocol.id != \"mqtts\" || !data.p1.useselfsigned" 
    },
    {
      "prop": "clean",
      "title": "CleanSession",
      "type": "cb",
      "default": true
    },
    {
      "prop": "clientId",
      "title": "ClientId",
      "type": "input",
      "default": "Client1",
      "hide": "data.p1.clean"
    }
    

  ],
  "p2": [
    {
      "prop": "use_password",
      "title": "$use_password",
      "type": "cb",
      "default": 0
    },
    {
      "prop": "username",
      "title": "$login",
      "type": "input",
      "default": "login",
      "hide": "!data.p2.use_password"
    },
    {
      "prop": "password",
      "title": "$password",
      "type": "password",
      "default": "password",
      "hide": "!data.p2.use_password"
    },
    {
      "prop": "willtopic",
      "title": "Will Topic",
      "type": "input",
      "default": "status"
    },
    {
      "prop": "willpayload",
      "title": "Will Payload",
      "type": "input",
      "default": "disconnected"
    },
    {
      "prop": "recoverypayload",
      "title": "Recovery Payload",
      "type": "input",
      "default": "connected"
    },
    {
      "prop": "willqos",
      "title": "Will Qos",
      "type": "droplist",
      "data": [
        { "id": 0, "title": "0" },
        { "id": 1, "title": "1" },
        { "id": 2, "title": "2" }],
      "default": 0
    },
    { 
      "prop": "willretain", 
      "title": "Will Retain", 
      "type": "cb", 
      "default": false
    },

    {
      "prop": "extract_ts",
      "title": "$extract_ts",
      "type": "cb",
      "default": 0
    },
    {
      "prop": "ts_field",
      "title": "$ts_field",
      "type": "input",
      "default": "ts",
      "hide": "!data.p2.extract_ts"
    }
  ],
  "p3": [
    {
      "prop": "restarttime",
      "title": "$Unit_Restarttime",
      "type": "input",
      "default": 5
    },
    { "prop": "loglevel", "title": "$LogLevel", "type": "droplist", "data": "loglevelList" },
    { "prop": "txt", "title": "$Comment", "type": "input" }
  ],
  "p9": [
    {
      "title": "",
      "type": "table",
      "prop": "unitsTreeTable",

      "columns": [
        { "prop": "name", "title": "$name", "type": "text", "width": 150 },
        { "prop": "state", "title": "$state", "type": "text", "width": 150 },
        { "prop": "laststart", "title": "$laststart", "type": "text", "width": 150 },
        { "prop": "laststop", "title": "$laststop", "type": "text", "width": 150 },
        { "prop": "uptime", "title": "$uptime", "type": "text", "width": 150 },
        { "prop": "error", "title": "$error", "type": "text", "width": 250 }
      ]
    }
  ]

}
