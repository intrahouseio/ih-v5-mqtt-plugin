    { "id": "p3", "xs": 12, "class": "main", "table": "devhard", "height": 240, "hide":"data.p1.foldertype"},
    { "id": "pscript", "xs": 12, "class": "main", "table": "devhard", "height":"fill", "padding":4, "hide": "data.p1.foldertype != 'node'"}
    
  ],
  "spacing": 4,

  "p1": [
    { "prop": "chan", "title": "$Name", "type": "input" },
    { "prop": "foldertype", "title": "", "type": "text", "hide":"1==1" }
  ],

  "p2": [

    { "prop": "parenttopic", "title": "$parenttopic", "type": "input", "default": 0 }
  ],

  "p3": [{ "prop": "txt", "title": "$Comment", "type": "textarea" }],

  "pscript": [
    { "prop": "channelscript", "title": "Code", "type": "script" }
  ]
